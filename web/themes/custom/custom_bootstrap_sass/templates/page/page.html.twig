{#
  GLOBAL PAGE TEMPLATE
  Used by all pages including /contact
#}

{{ attach_library('custom_bootstrap_sass/global-styling') }}
{{ attach_library('custom_bootstrap_sass/fontawesome') }}

{{ page_top }}

{# =========================
   GLOBAL HEADER + NAV
   ========================= #}
{% if page.header %}
  <header class="site-header" role="banner">
    {{ page.header }}
  </header>
{% endif %}

{% if page.primary_menu %}
  <nav class="primary-nav" aria-label="Main navigation">
    {{ page.primary_menu }}
  </nav>
{% endif %}

{# =========================
   MAIN CONTENT
   ========================= #}
<main id="main-content" role="main">

  {% if path('<current>') == '/contact' %}

    <section class="contact-section">
      <h1 class="contact-page-title">
        CONTACT <span>ME</span>
      </h1>

      <div class="contact-grid">

        <div class="contact-info">
          <h2>Contact Me Here</h2>

          <p>
            I’m always open to discussing new projects, creative collaborations,
            or professional opportunities. Please use the form below and I’ll
            respond promptly.
          </p>

          <ul class="contact-details">
            <li><i class="fa-solid fa-location-dot"></i> Greenbelt, MD USA</li>
            <li><i class="fa-solid fa-envelope"></i> southerlandfrazerm@gmail.com</li>
            <li><i class="fa-solid fa-graduation-cap"></i> Winston Salem State — BS</li>
            <li><i class="fa-solid fa-graduation-cap"></i> Full Sail — MS</li>
            <li><i class="fa-solid fa-phone"></i> 240-536-0785</li>
          </ul>
        </div>

        <div class="contact-form-wrapper">
          {{ page.content }}
        </div>

      </div>
    </section>

  {% else %}

    {{ page.content }}

  {% endif %}

</main>

{{ page_bottom }}
